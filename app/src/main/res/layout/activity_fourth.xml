<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="buildguide.quizapp.thirdActivity"
    android:background="#000000"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tx4"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:text="Technology"
        android:textAlignment="center"
        android:textColor="#ffc107"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/tx5"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="1. Did the Apple iPhone first become available in 2005, 2006 or 2007?"
        android:textAlignment="center"
        android:textColor="#ffc107"
        android:textSize="20dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ce"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/but2007"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/but2007"
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2007"
            android:textColor="#ff5722"
            android:layout_above="@+id/but2005"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp" />

        <Button
            android:id="@+id/but2005"
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2005"
            android:textColor="#ff5722"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/but2007"
            android:layout_alignStart="@+id/but2007" />

        <Button
            android:id="@+id/but2006"
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2006"
            android:textColor="#ff5722"
            android:layout_above="@+id/but2005"
            android:layout_alignLeft="@+id/but2005"
            android:layout_alignStart="@+id/but2005" />

    </RelativeLayout>

</LinearLayout>